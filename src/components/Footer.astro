---
import { Icon } from 'astro-icon/components';

import { platforms_info } from '@/configs/platforms';
import { socialLinks } from '@/configs/social';

const currentYear = new Date().getFullYear();
---

<footer class="w-full border-t bg-white/50 py-6 dark:border-gray-800 dark:bg-gray-950/50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
      <div class="flex flex-wrap justify-center gap-x-6 gap-y-2 md:order-2">
        {
          socialLinks.map(link => (
            <a
              href={link.url}
              class="text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{link.label}</span>
              <Icon name={platforms_info[link.platform].icon_name} class="h-6 w-6" />
            </a>
          ))
        }
      </div>
      <div class="md:order-1">
        <p class="text-center text-sm leading-5 text-gray-500 dark:text-gray-400">
          Made with <span class="text-red-500">‚ù§Ô∏è‚Äçüî•</span> by romaingrx. &copy; {currentYear}. All
          rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
