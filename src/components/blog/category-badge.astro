---
import { Icon } from 'astro-icon/components';

import { Badge } from '@/components/ui/badge';

type Props = {
  category: string;
  isActive?: boolean;
};

const { category, isActive = false } = Astro.props;
---

<a href={`/blog/category/${category}`}>
  <Badge variant={isActive ? 'active' : 'secondary'} className="gap-1.5">
    <Icon name="lucide:folder" class="h-3 w-3" />
    <span>{category}</span>
  </Badge>
</a>
